<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
							http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
							http://www.springframework.org/schema/context 
							http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <!-- Configuracion de Handlers -->
    <bean id="tutorLoginHandler" class="com.pirux.tesis.handler.LoginHandler">
        <constructor-arg index="0" ref="loginTutorServiceMock" />
    </bean>
    <bean id="articuloRelacionadoHandler" class="com.pirux.tesis.handler.ArticuloRelacionadoHandler">
        <constructor-arg index="0" ref="articuloRelacionadoServiceMock" />
    </bean>
    <bean id="tallerVirtualHandler" class="com.pirux.tesis.handler.TallerVirtualHandler">
        <constructor-arg index="0" ref="tallerVirtualServiceMock" />
    </bean>
</beans>