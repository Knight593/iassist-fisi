<?xml version="1.0" encoding="UTF-8"?>
<beans 	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
							http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
							http://www.springframework.org/schema/context 
							http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  
  <bean id="sesion" class="com.pirux.tesis.bean.SesionBean" scope="session" />
  <bean id="tutorSesionBean" class="com.pirux.tesis.bean.TutorSesionBean" scope="session">
      <property name="tutorLoginHandler" ref="tutorLoginHandler"></property>
  </bean>
  <bean id="hangOutBean" class="com.pirux.tesis.bean.HangOutBean" scope="application" />
  
   <!--   Configuracion de Hibernate -->
	<bean id="mySqlSessionFactory"
	   class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="configLocation">
		      <value>WEB-INF/hibernate.cfg.xml</value>
		</property>
	</bean>
	
    <!-- 	Configuracion de los DAOS -->
    <bean id="abstractHibernate" class="com.pirux.tesis.persistence.AbstractHibernateDAO">
            <!--    Falta Configurar -->
    </bean>
    <bean id="tutorDAO" class="com.pirux.tesis.dao.impl.UsuarioDAOImpl">
        <property name="localSessionFactory" ref="mySqlSessionFactory"/>
    </bean>
    
    <!--     Configuracion de Service -->
    <bean id="loginTutorService" class="com.pirux.tesis.service.impl.LoginServiceImpl">
        <property name="usuarioDAO" ref="tutorDAO"></property>
    </bean>
    <!--     Configuracion de Handlers -->
    <bean id="tutorLoginHandler" class="com.pirux.tesis.handler.LoginHandler">
        <constructor-arg index="0" ref="loginTutorService"></constructor-arg>
    </bean>
    
    <!-- Queda pendiente separar estas dependencias en diferentes appContexts -->
</beans>