.header {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1004;
}

.content {
	margin-top: 65px;
	overflow: hidden;
}

.footer {
	color: red;
	margin-top: 15px;
}

.panelDerecho {
	height: 100%;
	float: right;
	width: 270px';
	position: fixed;
	right: 0px;
	top: 45px;
	padding: 0px;
	margin: 0px;
	background-color: #FFE286;
}

.panelCentral {
	margin-right: 360px;
	background-color: #FFE286;
}


.panelEnlacesInteres {
	height: 50%;
}

.panelEnlacesRelacionados {
	height: 50%;
}

.enlaceRelacionado {
	border-color: blue;
	border-style: solid;
	border-width: 1px;
	font-size: 13px;
	height: 50px;
	line-height: 13px;
	overflow: hidden;
	padding: 5px;
	width: 250px;
}

.contenedorImagen {
	float: left;
	margin-right: 5px;
}

.imagenRelacionada {
	width: 45px;
}

.contenidoEnlace {
	font-family: tahoma;
	height: 100%;
	overflow: hidden;
}	

/* Estilos Pagina Principal */
body {
	background-color: #FFF4C9 !important;
    margin: 0;
}

/* Estilos Menu Bar Header */
.menuBarHeader {
    height: 44px;
    background-image: url("../images/fondo_header_azul.png");
    border: solid 0;
}

/* Estilos Panel Footer */
.panelFooterDerechosReservados {
	background-color: #B2B2B2;
	border-top: 3px solid;
	text-align: right;
}

.linksFooter {
	text-decoration: none;
    text-align: left;
    color: black;
    margin-left: 20px;
    font-size: 14px;
}

.linksFooter:hover {
    text-decoration: none;
    text-align: left;
    color: blue;
    margin-left: 20px;
    font-weight: bold;
}

.descripcionDerechosReservados {
    text-align: center;
    color: white;
    margin: 0;
    font-size: 12px;
    font-weight: bold;
}
/* Estilos Panel Derecho */
.divImagenArticuloRelacionado {
	display: inline-block;
    border-right: 1px solid blue;
    padding-right: 3px;
}

.divTituloArticuloRelacionado {
	display: inline-block;
	font-style: italic;
    font-size: 20px;
}

.divUrlArticuloRelacionado {
	margin-top: 5px;
	display: block;
	text-decoration: none;
	border-top: 1px solid blue;
	color: blue !important;
	font-size: 13px;
	text-align: right;
}